<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_material_dark"
    android:padding="8dp"
    android:minHeight="300dp"
    android:minWidth="300dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_clear_white_24dp"
        android:padding="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ad_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:layout_width="112dp"
            android:layout_height="112dp" />

        <TextView
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:id="@+id/ad_title"
            android:layout_below="@+id/ad_logo"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="@color/textLightMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/ad_text"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ad_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textLightSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_below="@+id/ad_text"
            android:layout_marginTop="4dp"
            android:id="@+id/button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textLightMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>